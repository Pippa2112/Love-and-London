{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* FIX: Container overflow to stop bleeding images */
  .collapsible-content__media-slider {
    position: relative;
    overflow: hidden;
    width: 100%;
    display: block; /* Ensure it behaves as a block */
  }
  
  .collapsible-content__media-slider .slider {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    
    /* CRITICAL FIXES FOR GAPS */
    gap: 0 !important;        /* Removes default theme gap */
    margin: 0 !important;     /* Removes default theme margins */
    padding: 0 !important;    /* Removes default theme padding */
    list-style: none;         /* Removes bullet points */
    width: 100%;
  }

  /* Chrome/Safari: hide scrollbar */
  .collapsible-content__media-slider .slider::-webkit-scrollbar {
    display: none;
  }

  .collapsible-content__media-slider .slider__slide {
    display: block;
    flex: 0 0 100%;
    width: 100%;
    min-width: 100%;
    max-width: 100%; /* Force exact width */
    scroll-snap-align: start; /* Snap to start is cleaner for full-width than center */
    margin: 0 !important;     /* Reset any theme margins */
    padding: 0 !important;    /* Reset any theme padding */
    border: none;
  }

  .collapsible-content__slide video,
  .collapsible-content__slide img {
    display: block; /* Removes bottom whitespace on inline images */
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* BUTTON STYLES */
  .collapsible-content__media-slider .slider-buttons {
    display: flex;
    justify-content: center;
    padding-top: 1rem;
    gap: 0.8rem;
    position: relative;
    z-index: 2;
  }

  /* Clean, small dots for mobile */
  .collapsible-content__media-slider .slider-counter__link--dots {
    border-radius: 50%;
    width: 8px;
    height: 8px;
    padding: 0;
    border: 1px solid rgba(var(--color-foreground), 0.5);
    background: transparent;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .collapsible-content__media-slider .slider-counter__link--dots.active {
    background: rgba(var(--color-foreground), 1);
  }

  /* HIDE BUTTONS ON DESKTOP */
  @media screen and (min-width: 750px) {
    .collapsible-content__media-slider .slider-buttons {
      display: none;
    }
  }
  
  {%- if section.settings.icon_color != blank -%}
  .section-{{ section.id }}-padding .accordion summary svg {
    fill: {{ section.settings.icon_color }};
  }
{%- endif -%}
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collapsible-content collapsible-{{ section.settings.layout }}-layout isolate{% if section.settings.layout == 'section' %} page-width{% elsif section.settings.layout == 'none' %} content-container content-container--full-width{% endif %}">
    <div class="collapsible-content__wrapper section-{{ section.id }}-padding{% if section.settings.layout == 'section' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}">
      <div class="{% if section.settings.image_1 == blank and section.settings.video == blank %}collapsible-content-wrapper-narrow{% else %}page-width{% endif %}">
        <div
          class="collapsible-content__header{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          style="text-align: {{ section.settings.heading_alignment }};"
        >
          {%- if section.settings.caption != blank -%}
            <p class="caption-with-letter-spacing">
              {{ section.settings.caption | escape }}
            </p>
          {% endif %}
          {%- if section.settings.heading != blank -%}
            <h2 class="collapsible-content__heading inline-richtext {{ section.settings.heading_size }}{% if section.settings.use_tertiary_font_heading %} font-tertiary{% endif %}">
              {{ section.settings.heading }}
            </h2>
          {%- else -%}
            <h2 class="visually-hidden">{{ 'accessibility.collapsible_content_title' | t }}</h2>
          {% endif %}
        </div>
        <div class="grid grid--1-col grid--2-col-tablet collapsible-content__grid{% if section.settings.desktop_layout == 'image_second' %} collapsible-content__grid--reverse{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.image_1 != blank or section.settings.image_2 != blank or section.settings.image_3 != blank or section.settings.video != blank -%}
            <div class="grid__item collapsible-content__grid-item">
              <slider-component class="slider-mobile-gutter collapsible-content__media-slider" id="SliderComponent-{{ section.id }}">
                <ul class="slider slider--everywhere" id="Slider-{{ section.id }}" role="list">
                  {%- if section.settings.image_1 != blank -%}
                    <li class="slider__slide collapsible-content__slide">
                      {{ section.settings.image_1 | image_url: width: 1600 | image_tag: loading: 'lazy', sizes: '(min-width: 750px) 50vw, 100vw' }}
                    </li>
                  {%- endif -%}
                  {%- if section.settings.image_2 != blank -%}
                    <li class="slider__slide collapsible-content__slide">
                      {{ section.settings.image_2 | image_url: width: 1600 | image_tag: loading: 'lazy', sizes: '(min-width: 750px) 50vw, 100vw' }}
                    </li>
                  {%- endif -%}
                  {%- if section.settings.image_3 != blank -%}
                    <li class="slider__slide collapsible-content__slide">
                      {{ section.settings.image_3 | image_url: width: 1600 | image_tag: loading: 'lazy', sizes: '(min-width: 750px) 50vw, 100vw' }}
                    </li>
                  {%- endif -%}
                  {%- if section.settings.video != blank -%}
                     <li class="slider__slide collapsible-content__slide">
                      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
                    </li>
                  {%- endif -%}
                </ul>
                <div class="slider-buttons slider-buttons--pagination">
                  {%- liquid
                    assign slide_count = 0
                    if section.settings.image_1 != blank 
                      assign slide_count = slide_count | plus: 1
                    endif
                    if section.settings.image_2 != blank
                      assign slide_count = slide_count | plus: 1
                    endif
                    if section.settings.image_3 != blank
                      assign slide_count = slide_count | plus: 1
                    endif
                    if section.settings.video != blank
                      assign slide_count = slide_count | plus: 1
                    endif
                  -%}
                  {%- if slide_count > 1 -%}
                    {%- for i in (1..slide_count) -%}
                      <button type="button" class="slider-counter__link slider-counter__link--dots" aria-label="{{ 'sections.slideshow.load_slide' | t: slide_number: i }}" data-index="{{ forloop.index0 }}">
                      </button>
                    {%- endfor -%}
                  {%- endif -%}
                </div>
              </slider-component>
            </div>
          {% endif %}
          <div class="grid__item">
            {%- for block in section.blocks -%}
              <div
                class="accordion{% if section.settings.layout == 'row' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}"
                {{ block.shopify_attributes }}
              >
                <details
                  id="Details-{{ block.id }}-{{ section.id }}"
                  {% if section.settings.open_first_collapsible_row and forloop.first %}
                    open
                  {% endif %}
                >
                  <summary id="Summary-{{ block.id }}-{{ section.id }}">
                    {% render 'icon-accordion', icon: block.settings.icon %}
                    <h3 class="accordion__title inline-richtext h4">
                      {{ block.settings.heading | default: block.settings.page.title | escape }}
                    </h3>
                    {% render 'icon-caret' %}
                  </summary>
                  <div
                    class="accordion__content rte"
                    id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                    {{ block.settings.row_content }}
                    {{ block.settings.page.content }}
                  </div>
                </details>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sectionId = "{{ section.id }}";
    const slider = document.getElementById(`Slider-${sectionId}`);
    const buttons = document.querySelectorAll(`#SliderComponent-${sectionId} .slider-counter__link--dots`);
    
    if (!slider) return;

    // --- AUTO SCROLL FUNCTIONALITY (DESKTOP) ---
    let autoScrollInterval;
    
    function startAutoScroll() {
      // Only run on desktop (min-width: 750px)
      if (window.innerWidth >= 750) {
        autoScrollInterval = setInterval(() => {
          const slideWidth = slider.offsetWidth;
          const maxScroll = slider.scrollWidth - slideWidth;
          
          // If we are at the end (or close enough), scroll back to start
          if (slider.scrollLeft >= maxScroll - 10) {
            slider.scrollTo({ left: 0, behavior: 'smooth' });
          } else {
            // Otherwise scroll to next slide
            slider.scrollBy({ left: slideWidth, behavior: 'smooth' });
          }
        }, 4000); // Change 4000 to adjust speed (in milliseconds)
      }
    }

    // Initialize Auto Scroll
    startAutoScroll();

    // Stop auto-scroll if user interacts (optional, good for UX)
    slider.addEventListener('touchstart', () => clearInterval(autoScrollInterval));
    slider.addEventListener('mouseenter', () => clearInterval(autoScrollInterval));
    slider.addEventListener('mouseleave', startAutoScroll);

    // --- BUTTON CLICK FUNCTIONALITY (MOBILE) ---
    buttons.forEach((btn, index) => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const slideWidth = slider.offsetWidth;
        slider.scrollTo({
          left: slideWidth * index,
          behavior: 'smooth'
        });
        
        // Update active class
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
      });
    });

    // Update active dot on scroll
    slider.addEventListener('scroll', () => {
       const slideWidth = slider.offsetWidth;
       const index = Math.round(slider.scrollLeft / slideWidth);
       buttons.forEach(b => b.classList.remove('active'));
       if(buttons[index]) buttons[index].classList.add('active');
    });
  });
</script>

