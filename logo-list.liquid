{%- comment -%}
  This section creates an infinitely scrolling carousel of logos.
  - V7 Changes: Added !important overrides to fix conflicts with Theme Editor Custom CSS.
  - Fixes: Restored background color, forced removal of scrollbars, repaired mobile animation.
  - Settings: Control title, padding, color scheme, scroll speed, and logo height.
  - Blocks: Add up to 20 logos, each with an optional link and adjustable width.
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* --- CORE CONTAINER STYLES --- */
  .logo-bar-section {
    position: relative;
    width: 100%;
    display: block;
    max-width: 100vw;
    /* Removed 'background: transparent' so Scheme 3 (Black) shows through */
  }

  .logo-bar__title {
    margin-bottom: 2rem;
    text-align: center !important;
  }

  /* MASK: The window that clips the content */
  .logo-bar-mask {
    width: 100%;
    overflow: hidden !important; /* Force clipping */
    position: relative;
    touch-action: pan-y;
    
    /* Hide scrollbars strictly */
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .logo-bar-mask::-webkit-scrollbar {
    display: none !important;
  }

  /* SLIDER CONTAINER */
  .logo-bar-container {
    --animation-speed: {{ section.settings.speed }}s;
    width: 200%; 
    display: flex;
    flex-wrap: nowrap;
    transform: translate3d(0, 0, 0); 
    will-change: transform;
    animation: scroll var(--animation-speed) linear infinite;
  }

  /* --- ANIMATION CONTROL --- */
  @media (hover: hover) and (pointer: fine) {
    .logo-bar-section:hover .logo-bar-container {
      animation-play-state: paused;
    }
  }

  .logo-bar-list {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-shrink: 0;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .logo-bar-item {
    padding: 0 2.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
  }

  .logo-bar-item img {
    max-height: {{ section.settings.logo_height }}px;
    height: auto;
    width: 100%;
    object-fit: contain;
    display: block; 
  }

  /* --- MOBILE CONFLICT OVERRIDES --- */
  /* We use !important here to defeat the conflicting Custom CSS from the theme editor */
  @media screen and (max-width: 749px) {
    
    /* 1. Force the container to be wide enough to scroll (overriding 'width: auto') */
    .logo-bar-container {
      width: 200% !important; 
      animation: scroll var(--animation-speed) linear infinite !important;
      display: flex !important;
    }

    /* 2. Force the list to hide scrollbars (overriding 'overflow-x: auto') */
    .logo-bar-list {
      width: 50% !important;
      overflow: hidden !important; 
      padding-bottom: 0 !important;
      justify-content: space-around !important;
    }

    /* 3. Resize logos properly */
    .logo-bar-item {
      padding: 0 1rem;
      max-width: 160px !important; 
      width: 40vw !important; 
      flex-shrink: 0 !important;
    }

    .logo-bar-item img {
      max-height: {{ section.settings.logo_height | times: 0.6 }}px;
    }
    
    .logo-bar__title {
      margin-bottom: 1.5rem;
    }
  }
{%- endstyle -%}

<div class="logo-bar-section color-{{ section.settings.color_scheme }}">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link center logo-bar__title">
        <{{ section.settings.heading_tag }} class="title">
          {{ section.settings.title }}
        </{{ section.settings.heading_tag }}>
      </div>
    {%- endif -%}

    {%- liquid
      assign image_height = section.settings.logo_height | times: 2
    -%}

    {%- if section.blocks.size > 0 -%}
      <div class="logo-bar-mask"> 
        <div class="logo-bar-container">
          <!-- List 1 -->
          <div class="logo-bar-list">
            {%- for block in section.blocks -%}
              <div class="logo-bar-item" style="width: {{ block.settings.logo_width }}px;" {{ block.shopify_attributes }}>
                {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: height: image_height | image_tag: loading: 'lazy', alt: block.settings.image.alt | default: 'Logo', height: section.settings.logo_height }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
                {%- if block.settings.link != blank -%}</a>{%- endif -%}
              </div>
            {%- endfor -%}
          </div>
          <!-- List 2 (Duplicate) -->
          <div class="logo-bar-list" aria-hidden="true">
            {%- for block in section.blocks -%}
              <div class="logo-bar-item" style="width: {{ block.settings.logo_width }}px;">
                 {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: height: image_height | image_tag: loading: 'lazy', alt: block.settings.image.alt | default: 'Logo', height: section.settings.logo_height }}
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
                {%- if block.settings.link != blank -%}</a>{%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Logo list",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "As featured in...",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ],
      "default": "h2",
      "label": "Heading type"
    },
    {
      "type": "header",
      "content": "Carousel Settings"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 20,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Logo height",
      "default": 100
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "s",
      "label": "Scroll speed",
      "default": 10
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "limit": 20,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 50,
          "max": 600,
          "step": 10,
          "unit": "px",
          "label": "Logo width",
          "default": 150
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "blocks": [
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}
