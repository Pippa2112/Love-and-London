{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .image-carousel__slide {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    line-height: 0;
  }

  .image-carousel__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-carousel__overlay {
    position: absolute; top: 0; left: 0; right: 0; bottom: 0;
    display: flex; justify-content: center; align-items: center; text-align: center;
    padding: 2rem;
    background: rgba(0, 0, 0, 0.4);
    color: #FFFFFF;
    line-height: 1.5;
  }
  
  .image-carousel__overlay > * { margin: 0; }

  .image-carousel__slider-wrapper {
    position: relative;
  }

  .image-carousel__slider {
    display: flex;
    gap: 1.5rem;
    list-style: none; /* Removes the bullet point dots */
    padding: 0;
    margin: 0;
  }

/* --- Desktop Carousel Styles --- */
@media screen and (min-width: 750px) {
  .image-carousel__slide-item {
    flex: 0 0 292px; /* Set fixed width */
    width: 292px;
    height: 229px; /* Set fixed height */
  }
}

  /* --- Manual Slider Styles --- */
  .image-carousel--manual .image-carousel__slider {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 1.5rem;
  }

  .image-carousel--manual .image-carousel__slide-item {
    scroll-snap-align: start;
  }

  {%- if section.blocks.size > 0 -%}
    .image-carousel--manual .image-carousel__slide-item:nth-child(n+{{ section.blocks.size | plus: 1 }}) {
      display: none;
    }
  {%- endif -%}

  /* --- Auto-Scroll Styles --- */
  .image-carousel--autoscroll .image-carousel__slider-wrapper {
    overflow: hidden;
    -webkit-mask-image: linear-gradient(to right, transparent, black 2rem, black 98%, transparent);
    mask-image: linear-gradient(to right, transparent, black 2rem, black 98%, transparent);
  }

  .image-carousel--autoscroll .image-carousel__slider {
  width: fit-content;
  --scroll-duration: {{ section.settings.slide_speed }}s; /* Desktop speed */
  animation: scroll-{{ section.id }} var(--scroll-duration, {{ section.settings.slide_speed }}s) linear infinite;
}

@media screen and (max-width: 749px) {
  .image-carousel--autoscroll .image-carousel__slider {
    /* Adjust speed for mobile's shorter scroll distance */
    --scroll-duration: {{ section.settings.slide_speed | times: 0.5 }}s;
  }
}


  .image-carousel--autoscroll:hover .image-carousel__slider {
    animation-play-state: paused;
  }
  
  @keyframes scroll-{{ section.id }} {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }

  /* --- Mobile Responsive Rules --- */
  @media screen and (max-width: 749px) {
  /* 1. Show 2 columns on mobile instead of 4 */
  .image-carousel__slide-item {
    flex: 0 0 calc((100% - 1.5rem) / 2);
    width: calc((100% - 1.5rem) / 2);
  }

  /* 2. Make the overlay text smaller and reduce padding */
  .image-carousel__overlay {
    font-size: 1.2rem;
    padding: 1rem;
    }
  }

  /* --- Mobile Animation Fix --- */
@media screen and (max-width: 749px) {
  /* 1. Use a new animation just for mobile */
  .image-carousel--autoscroll .image-carousel__slider {
    animation-name: scroll-mobile-{{ section.id }};
  }

  /* Define the new animation with the correct scroll distance */
  @keyframes scroll-mobile-{{ section.id }} {
    from { transform: translateX(0); }
    to { 
      /* Calculate distance: (Total Slides * (Slide Width + Gap)) / 2 duplicates */
      transform: translateX(calc(-{{ section.blocks.size }} * ((100% - 1.5rem) / 2 + 1.5rem)));
    }
  }
}
  
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="title center {{ section.settings.heading_size }}">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}
  </div>

  <div class="image-carousel {% if section.settings.auto_rotate %}image-carousel--autoscroll{% else %}image-carousel--manual{% endif %}">
    <div class="image-carousel__slider-wrapper">
      <ul class="image-carousel__slider">
        {%- for block in section.blocks -%}
          <li class="image-carousel__slide-item" {{ block.shopify_attributes }}>
            <div class="image-carousel__slide">
              {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 700 }}" 
                     srcset="{{ block.settings.image | image_url: width: 350 }} 350w, {{ block.settings.image | image_url: width: 700 }} 700w"
                     sizes="350px" alt="{{ block.settings.image.alt | escape }}" class="image-carousel__image" style="opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};" loading="lazy" width="350" height="275">
              {%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
              {%- if block.settings.text_overlay != blank -%}<div class="image-carousel__overlay h4">{{ block.settings.text_overlay }}</div>{%- endif -%}
              {%- if block.settings.link != blank -%}</a>{%- endif -%}
            </div>
          </li>
        {%- endfor -%}
        {%- comment -%} The duplicates are always here, but hidden by CSS in manual mode {%- endcomment -%}
        {%- for block in section.blocks -%}
          <li class="image-carousel__slide-item" aria-hidden="true">
            <div class="image-carousel__slide">
              {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 700 }}" 
                     srcset="{{ block.settings.image | image_url: width: 350 }} 350w, {{ block.settings.image | image_url: width: 700 }} 700w"
                     sizes="350px" alt="{{ block.settings.image.alt | escape }}" class="image-carousel__image" style="opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};" loading="lazy" width="350" height="275">
              {%- else -%}{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
              {%- if block.settings.text_overlay != blank -%}<div class="image-carousel__overlay h4">{{ block.settings.text_overlay }}</div>{%- endif -%}
              {%- if block.settings.link != blank -%}</a>{%- endif -%}
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image carousel",
  "tag": "section",
  "class": "section",
  "max_blocks": 20,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Heading",
      "default": "Image Carousel"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate slides",
      "default": false
    },
    {
      "type": "range",
      "id": "slide_speed",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "s",
      "label": "Scroll speed",
      "default": 40,
      "info": "Only applies if 'Auto-rotate' is enabled."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "text_overlay",
          "label": "Text overlay",
          "info": "Keep it short for best results."
        },
        {
          "type": "range",
          "id": "image_opacity",
          "min": 10,
          "max": 100,
          "step": 5,
          "unit": "%",
          "label": "Image opacity",
          "default": 100
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
